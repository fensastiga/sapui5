<mvc:View controllerName="appviewcaatalog.controller.List"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page  title="Vista Lista">
        <content>
            <VBox class="sapUiContentPadding sapUiMediumMargin">
            <List headerText="Products" items="{path: 'mProduct>/ProductCollection'}" 
                  mode="SingleSelectMaster" 
                  itemPress="onPressItem"
                  growing="true"
                  growingThreshold="10"
                  growingScrollToLoad = "false">   
                   <StandardListItem title="{mProduct>Name}" 
                                     description="{mProduct>Description}" 
                                     counter="{mProduct>Quantity}"
                                     icon="{mProduct>ProductPicUrl}"
                                     type="Active" />
            </List>
            </VBox>
        </content>
    </Page>
</mvc:View>