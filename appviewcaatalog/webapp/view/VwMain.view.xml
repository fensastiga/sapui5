<mvc:View controllerName="appviewcaatalog.controller.VwMain"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.f">
    <Page id="page" title="{i18n>title}">
        <content>
        <ScrollContainer width="100%" height = "100%" vertical="true">
        <Panel headerText="Header Panel" class="sapUiMediumMargin" width ="auto">
            <f:GridContainer class="sapuiSmallMargin" items="{mTile>/TileCollection}">

                <f:layout>
                    <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
                </f:layout>
                <f:layoutS>
                    <f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
                </f:layoutS>     
                <GenericTile header="{mTile>Title}" press="onPress" headerImage="{mTile>Icon}"> 
                    <layoutData>
                        <f:GridContainerItemLayoutData rows="2" columns="2" />
                    </layoutData>
                    <TileContent>
                        <Label text="{mTile>Description}" wrapping="true" />
                    </TileContent>
                </GenericTile>                           
            
            </f:GridContainer>


      <!--     <VBox class="sapUiMediumMargin">
                <GenericTile header="Titulo GenericTile" press="onPress"> 
                    <TileContent>
                        <Label text="Contenido de GenericTile" wrapping="true" />
                    </TileContent>
                </GenericTile>
           </VBox>
        -->
        </Panel>
        </ScrollContainer>
        </content>
    </Page>
</mvc:View>
